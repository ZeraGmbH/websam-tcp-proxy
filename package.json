{
  "build": {
    "appId": "net.psimarron.tools.tcp-proxy",
    "extraFiles": [
      {
        "from": ".env.defaults",
        "to": "../.env.defaults"
      }
    ],
    "files": [
      "build/**/*"
    ],
    "linux": {
      "artifactName": "tcp-proxy.appImage",
      "target": "AppImage"
    },
    "productName": "TCP/IP Proxy",
    "win": {
      "artifactName": "tcp-proxy.exe",
      "target": "portable"
    }
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "ping": "^1.0.0",
    "serialport": "^13.0.0",
    "uuid": "^13.0.0"
  },
  "description": "Proxy f√ºr TCP/IP Verbindungen",
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.2",
    "@types/debug": "^4.1.12",
    "@types/dom-serial": "^1.0.6",
    "@types/node": "^25.0.9",
    "@types/ping": "^0.4.4",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^11.0.0",
    "babel-loader": "^10.0.0",
    "clsx": "^2.1.1",
    "copy-webpack-plugin": "^13.0.1",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "debug": "^4.4.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "mini-css-extract-plugin": "^2.9.4",
    "ncp": "^2.0.0",
    "prettier": "^3.8.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-refresh": "^0.18.0",
    "react-refresh-typescript": "^2.0.11",
    "rimraf": "^6.1.2",
    "sass": "^1.97.2",
    "sass-loader": "^16.0.6",
    "stylelint": "^17.0.0",
    "svg-inline-loader": "^0.8.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.3"
  },
  "license": "MIT",
  "main": "build/index.js",
  "name": "tcp-proxy",
  "scripts": {
    "build": "rimraf build && yarn build:host && yarn build:app",
    "build:app": "rimraf build/dist && cd webapp && webpack build --env production",
    "build:host": "tsc",
    "deploy": "rimraf dist && yarn build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "start": "cross-env NODE_ENV=production node node_modules/electron/cli.js build/index",
    "watch:app": "cd webapp && webpack serve --hot",
    "watch:host": "tsc --watch"
  },
  "stylelint": {
    "rules": {
      "property-no-vendor-prefix": null,
      "value-no-vendor-prefix": null
    }
  },
  "version": "2.2.0"
}
