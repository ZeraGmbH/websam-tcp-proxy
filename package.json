{
  "build": {
    "appId": "net.psimarron.tools.tcp-proxy",
    "extraFiles": [
      {
        "from": ".env.defaults",
        "to": "../.env.defaults"
      }
    ],
    "files": [
      "build/**/*"
    ],
    "linux": {
      "artifactName": "tcp-proxy.appImage",
      "target": "AppImage"
    },
    "productName": "TCP/IP Proxy",
    "win": {
      "artifactName": "tcp-proxy.exe",
      "target": "portable"
    }
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "ping": "^0.4.4",
    "serialport": "^13.0.0",
    "uuid": "^11.1.0"
  },
  "description": "Proxy f√ºr TCP/IP Verbindungen",
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "@types/debug": "^4.1.12",
    "@types/dom-serial": "^1.0.6",
    "@types/node": "^24.2.0",
    "@types/ping": "^0.4.4",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "babel-loader": "^10.0.0",
    "clsx": "^2.1.1",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "debug": "^4.4.1",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.32.0",
    "mini-css-extract-plugin": "^2.9.3",
    "ncp": "^2.0.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-refresh": "^0.17.0",
    "react-refresh-typescript": "^2.0.10",
    "rimraf": "^6.0.1",
    "sass": "^1.90.0",
    "sass-loader": "^16.0.5",
    "stylelint": "^16.23.0",
    "svg-inline-loader": "^0.8.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "license": "MIT",
  "main": "build/index.js",
  "name": "tcp-proxy",
  "scripts": {
    "build": "rimraf build && yarn build:host && yarn build:app",
    "build:app": "rimraf build/dist && cd webapp && webpack build --env production",
    "build:host": "tsc",
    "deploy": "rimraf dist && yarn build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "start": "cross-env NODE_ENV=production node node_modules/electron/cli.js build/index",
    "watch:app": "cd webapp && webpack serve --hot",
    "watch:host": "tsc --watch"
  },
  "stylelint": {
    "rules": {
      "property-no-vendor-prefix": null,
      "value-no-vendor-prefix": null
    }
  },
  "version": "2.0.0"
}
